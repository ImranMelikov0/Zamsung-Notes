<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/white_left_right_top_bottom_radius"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rename_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create folder"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/folder_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textCursorDrawable="@drawable/cursor_edittext"
            android:hint="Folder name"
            android:layout_marginStart="15dp"
            android:backgroundTint="#000"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/rename_same"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:visibility="gone"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="15dp"
            android:text="There's already a folder with that name."
            android:textColor="#FF0000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            >
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:layout_marginEnd="15dp"
                android:textColor="@color/gray"
                android:layout_marginStart="15dp"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:backgroundTint="@color/gray"
                android:background="@drawable/line_divider" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/color_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/gray"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_24"/>
                    <ImageView
                        android:id="@+id/gray_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardElevation="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/red"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_red_24"/>
                    <ImageView
                        android:id="@+id/red_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    app:cardElevation="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/orange"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_orange_24"/>
                    <ImageView
                        android:id="@+id/orange_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/yellow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_yellow_24"/>
                    <ImageView
                        android:id="@+id/yellow_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/open_green"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_opengreen_24"/>
                    <ImageView
                        android:id="@+id/open_green_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    app:cardElevation="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/green"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_green_24"/>
                    <ImageView
                        android:id="@+id/green_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/color_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/open_blue1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_openblue_24"/>
                    <ImageView
                        android:id="@+id/open_blue1_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/open_red"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_openred_24"/>
                    <ImageView
                        android:id="@+id/open_red_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/pink"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_pink_24"/>
                    <ImageView
                        android:id="@+id/pink_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/open_blue2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_openblue2_24"/>
                    <ImageView
                        android:id="@+id/open_blue2_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/blue"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_blue_24"/>
                    <ImageView
                        android:id="@+id/blue_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/brown"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_circle_brown_24"/>
                    <ImageView
                        android:id="@+id/brown_check"
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_foldercolor_24"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textSize="20dp"
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:id="@+id/cancelButton" />
            <Button
                android:textSize="20dp"
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_margin="8dp"
                android:enabled="false"
                android:backgroundTint="@color/white"
                android:textColor="@drawable/button_enabled_black_gray"
                android:id="@+id/addButton" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
