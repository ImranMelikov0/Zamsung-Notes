<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/white_left_right_top_bottom_radius"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rename_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rename folder"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/folder_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textCursorDrawable="@drawable/cursor_edittext"
            android:hint="Folder name"
            android:layout_marginStart="15dp"
            android:backgroundTint="#000"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/rename_same"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:visibility="gone"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="15dp"
            android:text="There's already a folder with that name."
            android:textColor="#FF0000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textSize="20dp"
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:id="@+id/cancelButton" />

            <Button
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rename"
                android:textSize="20dp"
                android:enabled="false"
                android:textColor="@drawable/button_enabled_black_gray"
                android:id="@+id/renameButton" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
