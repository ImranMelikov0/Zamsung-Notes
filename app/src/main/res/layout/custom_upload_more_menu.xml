<!-- custom_menu_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    android:padding="16dp">
<LinearLayout
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/page_sorter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Page sorter"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/page_template"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Page template"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/page_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Page settings"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <View
        android:layout_marginTop="18dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line_divider" />
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/full_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Full screen"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/invite_collaborators"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Invite collaborators"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/add_to_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Add to shared notebook"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Tags"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/save_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        android:text="Save as file"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <View
        android:layout_marginTop="18dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line_divider" />

    <LinearLayout
        android:layout_marginBottom="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/upload_fav"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_border_24"/>
        <ImageView
            android:id="@+id/upload_share"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_share_24"/>
        <ImageView
            android:id="@+id/upload_delete"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"/>
    </LinearLayout>
</LinearLayout>


</androidx.cardview.widget.CardView>
